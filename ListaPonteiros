            aux = *p3;	
            printf("%c \n", aux);	
            //Resultado: P 



        /* (d) */
            p3 = &nome[4];	
            aux = *p3;	
            printf("%c \n", aux);	
            //Resultado: e
        

        /* (e) */
        p3 = nome;	           
        printf("%c \n", *p3);	
        //Resultado: P
        

        /* (f) */
        p3 = p3 + 4;	
        printf("%c \n", *p3);	
        //Resultado: e


        /* (g) */
        p3--;		
        printf("%c \n", *p3);	
        //Resultado: t


        /* (h) */
