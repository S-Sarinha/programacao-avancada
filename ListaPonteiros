        idade = *p5;	
        printf("%d \n", idade);
        //Resultado: 45


        /* (j) */
        p4 = p5 + 1;	
        idade = *p4;	
        printf("%d \n", idade);	
        //Resultado: 27
        

        /* (l) */
        p4 = p4 - 2;	
        idade = *p4;	
        printf("%d \n", idade);	
        //Resultado: 31


        /* (m) */
        p5 = &vetor[2] - 1;	
        printf("%d \n", *p5);	
        //Resultado: 45


        /* (n) */
        p5++;			
